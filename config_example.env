# Flask Configuration
FLASK_SECRET_KEY=change_this_to_a_random_secret_key
HOST=127.0.0.1
PORT=5000

# Optional: Google Maps API Key (for Fetch Hotel/Venue Data buttons)
# If not set, the app will fall back to OpenStreetMap Nominatim
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional: Search API Key (for AI Assistant web search)
# If not set, AI Assistant will work without web search context
# SEARCH_API_KEY=your_serpapi_key_here

# AI Integration (Replit only - handled automatically)
# These are automatically set when running on Replit
# AI_INTEGRATIONS_OPENAI_API_KEY=
# AI_INTEGRATIONS_OPENAI_BASE_URL=

# Optional: For local use, you can use your own OpenAI API key
# OPENAI_API_KEY=your_openai_api_key_here
